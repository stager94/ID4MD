!!!
%html
	%head
		%title ID4MD

		%link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,400italic,700italic,600,600italic' rel='stylesheet' type='text/css')
		
		= stylesheet_link_tag 'application', media: 'all'

		%meta(name='apple-mobile-web-app-capable' content='yes')
		%meta(name='apple-mobile-web-app-status-bar-style' content='black')
		%meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
		%meta(name='viewport' content='initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
		%meta(name="application-name" content="ID4MD")

		/ %meta(name="msapplication-TileColor" content="#4c835a")
		/ %meta(name="msapplication-square70x70logo" content="#{root_url}i/favicon/smalltile.png")
		/ %meta(name="msapplication-square150x150logo" content="#{root_url}i/favicon/mediumtile.png")
		/ %meta(name="msapplication-wide310x150logo" content="#{root_url}i/favicon/widetile.png")
		/ %meta(name="msapplication-square310x310logo" content="#{root_url}i/favicon/largetile.png")

		/ %link(rel="shortcut icon" href="/favicon.ico")

		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon.png")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-72x72.png" sizes="72x72")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-76x76.png" sizes="76x76")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-114x114.png" sizes="114x114")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-120x120.png" sizes="120x120")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-144x144.png" sizes="144x144")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-152x152.png" sizes="152x152")
		/ %link(rel="apple-touch-icon" href="#{root_url}i/favicon/apple-touch-icon-180x180.png" sizes="180x180")
		/ %link(rel="icon" href="#{root_url}i/favicon/icon-hires.png" sizes="192x192" type="image/png")
		/ %link(rel="icon" href="#{root_url}i/favicon/icon-normal.png" sizes="128x128" type="image/png")

		/ %link(rel="android-touch-icon" href="#{root_url}i/favicon/smartbanner.png")

		= csrf_meta_tags
	
	%body.doctor.bg-gray
		= yield
		= javascript_include_tag 'application'
